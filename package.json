{
  "name": "@outclimb/root",
  "version": "1.0.0",
  "description": "General Web Service for everything OutClimb",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OutClimb/OutClimb.git"
  },
  "author": "Nichole Mattera",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/OutClimb/OutClimb/issues"
  },
  "homepage": "https://github.com/OutClimb/OutClimb#readme",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:manager": "npm run build --workspace=@outclimb/manager",
    "dev": "npm run dev --workspaces",
    "dev:manager": "npm run dev --workspace=@outclimb/manager",
    "format": "npm run format --workspaces",
    "format:fix": "npm run format:fix --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "preview": "npm run preview --workspaces",
    "preview:manager": "npm run preview --workspace=@outclimb/manager"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@tanstack/router-plugin": "^1.150.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^17.1.0",
    "prettier": "^3.8.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.2.4"
  },
  "lint-staged": {
    "packages/**/src/**/*.{css,html,js,jsx,scss,ts,tsx,vue}": [
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ],
    "*.go": [
      "gofmt -w"
    ]
  }
}
