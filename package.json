{
  "name": "@outclimb/root",
  "version": "1.0.0",
  "description": "General Web Service for everything OutClimb",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OutClimb/OutClimb.git"
  },
  "author": "Nichole Mattera",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/OutClimb/OutClimb/issues"
  },
  "homepage": "https://github.com/OutClimb/OutClimb#readme",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "packages/**/*.{css,html,js,jsx,scss,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ],
    "*.go": [
      "gofmt -w"
    ]
  }
}
